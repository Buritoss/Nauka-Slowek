<Application x:Class="Words.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Words"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Border" x:Key="borderModifyingButtons">
            <Setter Property="Margin" Value="20,30,20,0"/>
        </Style>

        <Style TargetType="Border" x:Key="borderOfTextBoxesInModify">
            <Setter Property="Margin" Value="0,30,0,0"/>
            <Setter Property="BorderBrush" Value="#d9de87"/>
            <Setter Property="BorderThickness" Value="5"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>

        <Style TargetType="Button" x:Key="buttonMainWindow">
            <Setter Property="Margin" Value="10,30,60,30"/>
            <Setter Property="Background" Value="#ce954b"/>
        </Style>

        <Style TargetType="Frame" x:Key="frameMainWindow">
            <Setter Property="Margin" Value="20,30,20,0"/>
        </Style>
    </Application.Resources>
</Application>
