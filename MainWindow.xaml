<Window x:Class="Words.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Words"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <Grid Background="#DEB887">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Style="{StaticResource buttonMainWindow}" Grid.Row="0" Grid.Column="0" Content="Trenuj" Click="ChangeToTraining" />
        <Button Style="{StaticResource buttonMainWindow}" Grid.Row="1" Grid.Column="0" Content="Modyfikuj" Click="ChangeToModifying"/>

        <Frame Grid.Row="0" Grid.Column="1" Grid.RowSpan="4" Grid.ColumnSpan="5"  x:Name="Main" Margin="-50,0,0,0" NavigationUIVisibility="Hidden">

        </Frame>

    </Grid>
</Window>
